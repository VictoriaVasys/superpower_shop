
<div class="account_form">
 <!-- <div class="account_form col-sm-2 col-sm-6"> -->
   <%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
   <fieldset>

     <div class = "form-group">
       <%= f.label :first_name, :class => "col-sm-2 control-label" %>
       <div class = "col-sm-10">
         <%= f.text_field :first_name %>
       </div>
     </div>
   
  <div class = "form-group">
    <%= f.label :last_name, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :last_name %>
    </div>
  </div>
 
  <div class = "form-group">
    <%= f.label :address, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>
 
  <div class = "form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :password, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :password %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :password_confirmation %>
    </div>
  </div>
 
  <div class = "form-actions">
    <%= f.submit "create your secret identity", class: 'btn btn-primary'%>
  </div>
</fieldset>
<% end %>
<!-- </div> -->
</div>
