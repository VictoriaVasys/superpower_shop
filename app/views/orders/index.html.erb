<h1>Your Orders</h1>

<div class="orders">
  <% @orders.each do |order| %>
    <div class="order">  
    <% unless order.status == "Cancelled" %>
      <h3><%= link_to "Abilities Order ##{order.id}", order_path(order) %></h3>
      <p>Date Ordered: <%= order.created_time %></p>
    <% else %>
      <%= "Order #{order.id} was cancelled on #{order.updated_time}" %>
    <% end %>
    </div>
  <% end %>
</div>
