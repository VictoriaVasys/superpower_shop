<div>
  <%= form_for @power, :url => admin_powers_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.submit "Create Power" %>

  <% end %>
</div>
