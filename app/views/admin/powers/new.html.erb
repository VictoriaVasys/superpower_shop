<div class="account_form">
  <%= form_for @power, :url => admin_powers_path, html: {multipart: true, :class => 'form-horizontal'} do |f| %>
  <fieldset>

    <div class = "form-group">
      <%= f.label :title, :class => "col-sm-2 control-label" %>
      <div class = "col-sm-10">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :description, :class => "col-sm-2 control-label" %>
      <div class = "col-sm-10">
        <%= f.text_field :description %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :price, :class => "col-sm-2 control-label" %>
      <div class = "col-sm-10">
        <%= f.text_field :price %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :image, "Attach an Image", :class => "col-sm-2 control-label" %>
      <div class = "col-sm-10">
        <%= f.text_field :image %>
      </div>
    </div>
    <!-- <%#= f.label :image, "Attach an Image" %></br>
    <%#= f.file_field :image %> -->

    <div class = "form-group">
      <%= f.label :category, :class => "col-sm-2 control-label" %>
      <div class = "col-sm-10">
        <%= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true %>
      </div>
    </div>
    
    <!-- <%#= f.label :category %>
    <%#= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true %> -->

    <div class = "form-actions">
      <%= f.submit "Create Power", class: 'btn btn-primary' %>
    </div>
    
  </fieldset>
  <% end %>
</div>
