<h1>Admin Dashboard</h1>

<% @orders.each do |order| %>
  <%= link_to "Order ##{order.id}", order_path(order)%>
<% end %>

<h1> <%= link_to "Ordered Orders:", admin_filter_path(type: "ordered") %> <%= @ordered_orders_count %> </h1>
<h1><%= link_to "Paid Orders:", admin_filter_path(type: "paid") %> <%= @paid_orders_count %> </h1>
<h1><%= link_to "Cancelled Orders:", admin_filter_path(type: "cancelled") %> <%= @cancelled_orders_count %> </h1>
<h1><%= link_to "Completed Orders:", admin_filter_path(type: "completed") %> <%= @completed_orders_count %> </h1>
