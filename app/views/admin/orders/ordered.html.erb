<h1>Ordered Orders</h1>

<div class="powers">
  <% @orders.each do |order| %>
    <div class = "power">
      <p> <%= link_to "Order ##{order.id}", order_path(order) %> was ordered on <%= order.updated_at.strftime("%A, %d %b %Y %l:%M %p") %></p>
      <p><%= button_to 'Mark Paid', order_path(order, type: "pay"), class: "btn btn-primary", method: :put %></p>
      <%= button_to 'Cancel Order', order_path(order, type: "cancel"), class: "btn btn-danger", method: :put %>
    </div>
  <% end %>
</div>
