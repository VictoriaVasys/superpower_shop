<h1>Ordered Orders</h1>


<% @orders.each do |order| %>
  <p> <%= link_to "Order #{order.id}", order_path(order) %> was ordered on <%= order.updated_at.strftime("%A, %d %b %Y %l:%M %p") %></p>

  <%= button_to 'Cancel Order', order_path(order, type: "cancel"), method: :put %>
  <%= button_to 'Mark as Paid', order_path(order, type: "pay"), method: :put %>

<% end %>
