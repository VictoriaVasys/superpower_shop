<div class="checkout_button_or_sign_up">
  <h4><%= checkout_button_or_sign_up %></h4>
</div>

<% @powers.each do |power| %>
  <div class= <%= "power power_#{power.id}" %>>
    <h1><%= power.title %></h1>
    <div class="power image">
      <img src="<%= power.image_url %>" width="50" height="50"/>
    </div>
    <div class="description">
      Power Description: <%= power.description %>
    </div>
    <div class="price">
      Price: $<%= power.price %>
    </div>
    <div class="quantity">
      Quantity: <%= power.quantity %>
    </div>
    <%= button_to '+', briefcase_path(power_id: power.id, type: "increase"), class: 'btn btn-info', method: :patch   %>
    <%= decrease_quantity_button(power) %>
    <h4><%= button_to 'Remove', briefcase_path(power_id: power.id), class: 'btn btn-info', method: :put %></h4>
    <div class="subtotal">
      <h4>Subtotal: $<%= power.total_cost %></h4>
    </div>

  </div>
<% end %>
</br>
<div class="total">
  <h2> Total: $<%= @briefcase.total_cost %> </h2>
</div>

